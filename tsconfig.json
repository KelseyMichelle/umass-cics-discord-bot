{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
	"forceConsistentCasingInFileNames": true,
	"baseUrl": "./",
	"sourceMap": true,
	"outDir": "./out",
	"resolveJsonModule": true,
	"paths": {
	  "UMass/*": ["./src/UMass/*"],
	  "Discord/*": ["./src/Discord/*"],
	  "Shared/*": ["./src/Shared/*"],
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  }
}
